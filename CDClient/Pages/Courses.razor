                <td>@concept.Priority
                    <button class="btn btn-primary" @onclick="@concept.decPriority">-</button>
                    <button class="btn btn-primary" @onclick="@concept.incPriority">+</button>
                </td>
                <td>@concept.Mastery
                    <button class="btn btn-primary" @onclick="@concept.decMastery">-</button>
